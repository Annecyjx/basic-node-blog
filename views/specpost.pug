html
  head
    title basic-node-blog
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(type='text/css', rel='stylesheet', href='/../css/materialize.css', media='screen,projection')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(type='text/javascript', src='/../js/jquery-3.1.1.js')
    script(type='text/javascript' src='/../js/custom.js')
      
  body(style='font-size: 22')
    if user
      .navbar-fixed
        nav
          .nav-wrapper.grey.darken-3
            a.brand-logo(href='/' style='padding: 0 0 0 15%') Home
            ul#nav-mobile.right.hide-on-med-and-down(style='padding: 0 15%')
              li
                a(href='/allposts') All Posts
              li
                a(href='/ownposts') Own Posts
              li
                a(href='/logout') Logout

      .container         
        .header
          h2=user.username
          h2 Showing specific post:         
            p(class='postId', id=commentInfo.id) #{commentInfo.title}
            p #{commentInfo.body}
            if commentInfo.comments
            each comment in commentInfo.comments
              p #{comment.body}
            div#result-box

          .row 
            h2 Please leave your comment:
            .row
              form()
                .input-field.col.s12
                  input#body.validate(type='text', name='body')
                  |
                  br
                  | 
                  label(for='body', class='active') Comment
                .input-field.col.s12
                  button.btn.btn-primary(type='submit') Send
    else
      .navbar-fixed
        nav
          .nav-wrapper.grey.darken-3
            a.brand-logo(href='/' style='padding: 0 0 0 15%') Home/Login
            ul#nav-mobile.right.hide-on-med-and-down(style='padding: 0 15%')
              li
                a(href='/allposts') All Posts
              li
                a(href='/register') Register
      .container 
        h2#error-message= message


