html
  head
    title basic-node-blog
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(type='text/css', rel='stylesheet', href='css/materialize.css', media='screen,projection')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(type='text/javascript', src='js/jquery.com/jquery-3.1.1.js')
    script.
      $(document).ready(function () {
        $('#submit').click(function(event) {
          if($('#email').val().trim().length === 0 || $('#password').val().trim().length === 0) {
            event.preventDefault();
            $('#error-message').html("Your email or password field is empty.");
          }
        });
      });
  body(style='font-size: 22')
    .navbar-fixed
        nav
          .nav-wrapper.grey.darken-3
            a.brand-logo(href='/' style='padding: 0 0 0 15%') Home
            ul#nav-mobile.right.hide-on-med-and-down(style='padding: 0 15%')
              li
                a(href='/allposts') All Posts
    .container 
       .header
        br
        h1 Register
        br
       .row
          form(method='POST', action='/register')
            .row
              .input-field.col.s12
                input#username.validate(type='text', name='username')
                |
                br
                | 
                label(for='username', class='active') Username
              .input-field.col.s12
                input#email.validate(type='text', name='email')
                |
                br
                | 
                label(for='email', class='active') Email
              .input-field.col.s12
                input#password.validate(type='text', name='password')
                |
                br
                | 
                label(for='password', class='active') Password
              .input-field.col.s12
                button.btn.btn-primary(type='submit') Register