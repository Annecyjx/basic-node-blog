html
  head
    title basic-node-blog
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(type='text/css', rel='stylesheet', href='/../css/materialize.css', media='screen,projection')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(type='text/javascript', src='/../js/jquery-3.1.1.js')
    script.
      function validateForm() {
        var username = document.forms['userForm']['username'].value;
        var password = document.forms['userForm']['password'].value;
        var email = document.forms['userForm']['email'].value;
        if (username == '') {
          $('#error-message').html("Your username cannot be empty");
          document.forms['userForm']['username'].focus();
          return false
          }
        if (username.length > 20) {
          $('#error-message').html("Your username cannot be more than 20 characters");
          document.forms['userForm']['username'].focus();
          return false
        }
        if (email == '') {
          $('#error-message').html("Your email cannot be empty");
          document.forms['userForm']['email'].focus();
          return false
          }
        if (email.length > 50) {
          $('#error-message').html("Your email cannot be more than 50 characters");
          document.forms['userForm']['email'].focus();
          return false
        }
        if (password == '') {
          $('#error-message').html("Your password cannot be empty");
          document.forms['userForm']['password'].focus();
          return false
        }
        if (password.length > 50) {
          $('#error-message').html("Your password cannot be more than 50 characters");
          document.forms['userForm']['password'].focus();
          return false
        }
        if (password.length < 8) {
          $('#error-message').html("Your password has to be 8 or more characters");
          document.forms['userForm']['password'].focus();
          return false
        }
          return(true)
      }
  body(style='font-size: 22')
    .navbar-fixed
        nav
          .nav-wrapper.grey.darken-3
            a.brand-logo(href='/' style='padding: 0 0 0 15%') Home
            ul#nav-mobile.right.hide-on-med-and-down(style='padding: 0 15%')
              li
                a(href='/allposts') All Posts
    .container 
       .header
        br
        h1 Register
        br
       .row
          form(method='POST', action='/register', name='userForm', onsubmit='return validateForm()')
            .row
              .input-field.col.s12
                input#username.validate(type='text', name='username', maxlength=20, required)
                |
                br
                | 
                label(for='username', class='active') Username
              .input-field.col.s12
                input#email.validate(type='text', name='email', maxlength=50, required)
                |
                br
                | 
                label(for='email', class='active') Email
              .input-field.col.s12
                input#password.validate(type='password', name='password', maxlength=50, required)
                |
                br
                | 
                label(for='password', class='active') Password
              .input-field.col.s12
                button.btn.btn-primary(type='submit') Register
          h2#error-message= message